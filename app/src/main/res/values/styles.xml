<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Customcolor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/customColor1</item>
        <item name="colorPrimaryDark">@color/customColor1</item>
        <item name="colorAccent">@color/customColor1</item>
        <item name="android:navigationBarColor">@color/customColor1</item>
    </style>
    <style name="Customcolor2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/customColor2</item>
        <item name="colorPrimaryDark">@color/customColor2</item>
        <item name="colorAccent">@color/customColor2</item>
        <item name="android:navigationBarColor">@color/customColor2</item>
    </style>

</resources>