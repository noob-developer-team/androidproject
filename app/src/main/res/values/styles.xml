<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Custom1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/customColor1</item>
        <item name="colorPrimaryDark">@color/customColor1</item>
        <item name="colorAccent">@color/customColor1</item>
        <item name="android:navigationBarColor">@color/customColor1</item>
    </style>

    <style name="Custom2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/customColor2</item>
        <item name="colorPrimaryDark">@color/customColor2</item>
        <item name="colorAccent">@color/customColor2</item>
        <item name="android:navigationBarColor">@color/customColor2</item>
    </style>
    <style name="Custom3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/full_transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
    </style>
    <style name="Custom4" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">#007AFF</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/semi_transparent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>